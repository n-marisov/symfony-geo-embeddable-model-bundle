<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <!-- Объект границ фигуры -->
    <embeddable name="Maris\Symfony\Geo\Embeddable\Model\Entity\Bounds">

        <!-- -90.0 <= north <= 90.0 -->
        <field name="north" type="decimal" precision="8" scale="6" />

        <!-- -180.0 <= west <= 180.0 -->
        <field name="west" type="decimal" precision="9" scale="6" />

        <!-- -90.0 <= south <= 90.0 -->
        <field name="south" type="decimal" precision="8" scale="6" />

        <!-- -180.0 <= east <= 180.0 -->
        <field name="east" type="decimal" precision="9" scale="6" />

    </embeddable>

</doctrine-mapping>